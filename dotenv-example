# general logconf setting
LOGCONF=debug-logconf.yml

# general repo setting
GDB_REPO="kgap"
GDB_URL_READ  = "http://graphdb:7200/repositories/kgap"
GDB_URL_WRITE = "http://graphdb:7200/repositories/kgap/statements"

# scheduler settings
SCHEDULER_PERIOD=5 # seconds | time bewteen scheduler runs
SCHEDULER_WAIT=5 # seconds | this is needed because the graphdb container takes some time to start, else the first run will be an error
